							"var b = parseFloat(body.size);",
							"var c = parseFloat(body.smoothness);",
							"var d = parseFloat(body.soil_dryness);",
							"",
							"",
							"pm.globals.set(\"retornaMaior\", function retornaMaior() {",
							"  let retornaMaior = \"\";",
							"  if (( a > b ) && ( a > c ) && ( a > d )){",
							"   retornaMaior = \"natural_gift_power\"  ",
							"  } else {",
							"      if (( b > a ) && ( b > c ) && ( b > d )){",
							"        retornaMaior = \"size\"",
							"      }",
							"      else {",
							"        if (( c > a ) && ( c > b ) && ( c > d )){",
							"          retornaMaior = \"smoothness\"",
							"        }",
							"        else {",
							"          retornaMaior = \"soil_dryness\"",
							"        }",
							"      }",
							"    } ",
							"  return retornaMaior;",
							"});",
							"",
							"pm.globals.set(\"retornaMenor\", function retornaMenor() {",
							"  let retornaMenor = \"\";",
							"  if (( a < b ) && ( a < c ) && (a < d )){",
							"   retornaMenor = \"natural_gift_power\"  ",
							"  } else {",
							"      if (( b < a ) && (b < c) && ( b < d )){",
							"        retornaMenor = \"size\"",
							"      }",
							"      else {",
							"        if ( ( c < a ) && ( c < b ) && ( c < d )){",
							"          retornaMenor = \"smoothness\"",
							"        }",
							"        else {",
							"          retornaMenor = \"soil_dryness\"",
							"        }",
							"      }",
							"    } ",
							"  return retornaMenor;",
							"});",
							"",
							"",
							"pm.test(\"The higher is \" + pm.globals.get(\"retornaMaior\"));",
							"pm.test(\"The lower is \" + pm.globals.get(\"retornaMenor\"));",
